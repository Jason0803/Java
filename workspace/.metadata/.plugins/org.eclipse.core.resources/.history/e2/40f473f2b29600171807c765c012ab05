<style type="text/css">
	.bigger {
		width: 200;
	}
</style>
<script type="text/javascript" src = "http://code.jquery.com/jquery-3.2.1.js"></script>
	<script type="text/javascript">
	$(function() {
		$('img').hover(
			function() {
				$(this).addClass('bigger');
			}, 
			function() {
				$(this).removeClass('bigger');
			}
		);
	});
	
	</script>
</head>
