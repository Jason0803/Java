package step4.self;
public class StringProb2 {
	public static final String SPACE = " ";
	
	public static void main(String[] args) {
		System.out.println(spaceTrim("Java  Program        Language"));
		System.out.println(spaceTrim("Structured Query     Language"));
		System.out.println(spaceTrim("Servlet & JSP"));
	}

	private static char[] spaceTrim(String string) {
		// Java Program Language
		char[] result = new char[string.length()+1];
		String[] temp = string.split(" ");
		for(int i = 0; i < temp.length; i++) {
			temp[i] = temp[i].trim();
		}
		
		int index = 0;
		for(int i = 0; i < temp.length; i++){
			if(!(temp[i].equals(SPACE) ) ) {
				for(int j = 0; j < temp[i].length(); j++){
					result[index++] = temp[i].charAt(j);
				}
				// result[index] = SPACE.charAt(0);
			} 
			else { // current string starts with
				if(result[index] == SPACE.charAt(0)) continue;
				else {
					result[index] = SPACE.charAt(0);
					index++;
				}
			}
		
		}
		
		return result;
	}
}
