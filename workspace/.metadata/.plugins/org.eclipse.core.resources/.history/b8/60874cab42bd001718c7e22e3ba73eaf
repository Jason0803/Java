<script type="text/javascript">
	function startRequest() {
		var xhr = new XMLHttpRequest();
		var id = document.idcheck.userId;
		
		xhr.onreadystatechange = callback;
		xhr.open("get", "IdCheckServlet?id="+id.value,true);
		xhr.send(null);
	}
	
	function callback() {
		
	}
</script>
