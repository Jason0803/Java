package controller;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class WritePostController implements Controller {

	@Override
	public ModelAndView handle(HttpServletRequest request, HttpServletResponse response) throws Exception {
		int itemid = Integer.parseInt(request.getParameter("itemid"));
		BoardVO item= ItemDao.getInstance().getItem(itemid);
		
		//장바구니 로직을 호출하기 위해서 CartBiz 객체를 생성
		CartBiz  cartBiz = new CartBiz();
		cartBiz.addCart(request, item); //장바구니에 알아서 들어감..
		
		ModelAndView mv = new ModelAndView();
		mv.setUrl("itemCartList.do");
		mv.setRedirect(true);
		return mv;
	}

}
