<title>IMAGE</title>
<script type="text/javascript" src = "http://code.jquery.com/jquery-3.2.1.js"></script>
	<script type="text/javascript">
		$(function() {
			$('#imageView').hide();
			
			$('#mouseIn').css({
				'background':'yellow',
				'font-size':'1.2em',
				'margin':'200px';
			});
			
			$('#mouseIn').mouseenter(function() {
				$('#imageView').show(3000);
			});
			
			$('#mousein').mouseleave(function() {
				$('#imageView').hide(3000);
			});
		});
	</script>
</head>
<body>
