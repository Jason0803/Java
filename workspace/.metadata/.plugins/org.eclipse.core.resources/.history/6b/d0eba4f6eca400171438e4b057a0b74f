package sql;

public interface StringQuery {
	String INSERT_POSTING =
			"INSERT INTO board (no,title,writer,password,content,time_posted)"
			+ " VALUES(board_seq.nextVal,?,?,?,?,sysdate)";
	
	String SELECT_POSTING =  "SELECT no, title, writer, content, hits, time_posted "
			+ "FROM board "
			+ "WHERE no = ?";
	
	String CURRENT_NO = "SELECT board_seq.currVal FROM dual";
	
	String SELECT_All_POSTS = "SELECT * FROM board";
	
	String PAGE_LIST = "SELECT no, title, writer, hits, time_posted "
			+ "FROM board";
}
